@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <li class="nav-item">
        <a asp-controller="Dashboard" asp-area="Admin" asp-action="Index" class="nav-link" aria-current="page">Admin</a>
    </li>
}


@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a asp-controller="Account" asp-area="" asp-action="Logout" asp-route-returnUrl="@Context.Request.PathAndQuery()" class="nav-link" aria-current="page" >Logout</a>
    </li>

}
else
{
    <li class="nav-item">
        <a asp-controller="Account" asp-area="" asp-action="Login" asp-route-returnUrl="@Context.Request.PathAndQuery()" class="nav-link" aria-current="page">Login</a>
    </li>
}
